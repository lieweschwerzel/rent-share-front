<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="8dp"
    tools:context=".ui.MainActivity">

    <Button
        android:id="@+id/searchButton"
        android:layout_width="84dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onClickSearchButton"
        android:text="search"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toEndOf="@+id/searchText"
        tools:layout_editor_absoluteY="8dp" />

    <Button
        android:id="@+id/addButton"
        android:layout_width="84dp"
        android:layout_height="45dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onClickAddButton"
        android:text="add"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="@+id/searchButton"
        app:layout_constraintTop_toBottomOf="@+id/searchButton" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="84dp"
        android:layout_height="46dp"
        android:backgroundTint="@color/colorPrimary"
        android:onClick="onClickDeleteButton"
        android:text="delete"
        android:textColor="@android:color/background_light"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/addButton"
        app:layout_constraintTop_toBottomOf="@+id/addButton"
        tools:visibility="visible" />

    <EditText
        android:id="@+id/searchText"
        android:layout_width="284dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autofillHints="@android:string/search_go"
        android:backgroundTint="@color/colorPrimary"
        android:ems="10"
        android:inputType="textPersonName"
        android:textColorHint="@color/colorPrimary"
        android:textColorLink="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/advertRecycler"
        android:layout_width="384dp"
        android:layout_height="400dp"
        app:layout_constraintTop_toBottomOf="@+id/deleteButton"
        tools:layout_editor_absoluteX="11dp" />

    <TextView
        android:id="@+id/gpsTestText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="TextView"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advertRecycler" />

    <Button
        android:id="@+id/gpsTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickGps"
        android:text="GPS en Maps"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/advertRecycler" />

    <Button
        android:id="@+id/mailTestBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:onClick="onClickMail"
        android:text="Mail"
        app:layout_constraintStart_toEndOf="@+id/gpsTestBtn"
        app:layout_constraintTop_toTopOf="@+id/gpsTestBtn" />

    <Button
        android:id="@+id/testTimerBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:onClick="onClickTimer"
        android:text="Timer"
        app:layout_constraintStart_toEndOf="@+id/mailTestBtn"
        app:layout_constraintTop_toTopOf="@+id/mailTestBtn" />

</android.support.constraint.ConstraintLayout>